#include <behaviors.dtsi>
#include <dt-bindings/zmk/backlight.h>
#include <dt-bindings/zmk/bt.h>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/rgb.h>

/ {
    keymap {
        compatible = "zmk,keymap";

        default_layer {
            // ------------------------------------------------------------------------------------------
            // | ESC |  1  |  2  |  3  |  4  |  5  |  6  |  7  |  8  |  9  |  0  |  -  |  =  |BKSP | DEL |
            // | TAB  |  Q  |  W  |  E  |  R  |  T  |  Y  |  U  |  I  |  O  |  P  |  [  |  ]  |  |   |
            // | CAPS  |  A  |  S  |  D  |  F  |  G  |  H  |  J  |  K  |  L  |  ;  |  '  |     ENTER    |
            // |  SHIFT|NONE|  Z  |  X  |  C  |  V  |  B  |  N  |  M  |  ,  |  .  | /   | SHFT | UP | 1  |
            // |  CTL  |  WIN  |  ALT  |            SPACE              | ALT | CTRL | LEFT | DOWN | RIGHT |
            // ------------------------------------------------------------------------------------------

            bindings = <
  &kp ESC     &kp N1    &kp N2    &kp N3     &kp N4  &kp N5    &kp N6    &kp N7     &kp N8     &kp N9    &kp N0  &kp MINUS  &kp EQUAL      &kp TILDE  &kp C_MUTE
  &kp TAB      &kp Q     &kp W     &kp E      &kp R   &kp T     &kp Y     &kp U      &kp I      &kp O     &kp P   &kp LBKT   &kp RBKT  &kp BACKSPACE
 &kp CLCK      &kp A     &kp S     &kp D      &kp F   &kp G     &kp H     &kp J      &kp K      &kp L  &kp SEMI    &kp SQT    &kp RET
&kp LSHFT      &none     &kp Z     &kp X      &kp C   &kp V     &kp B     &kp N      &kp M  &kp COMMA   &kp DOT   &kp FSLH     &kp UP          &none    &kp BSLH
           &kp LCTRL  &kp LGUI  &kp LALT  &kp SPACE   &mo 1  &kp LEFT  &kp DOWN  &kp RIGHT      &none
            >;

            sensor-bindings = <&inc_dec_kp C_VOL_UP C_VOL_DN>;
        };

        raise {
            bindings = <
&kp GRAVE           &kp F1           &kp F2           &kp F3           &kp F4           &kp F5           &kp F6           &kp F7           &kp F8           &kp F9          &kp F10          &kp F11      &kp F12  &trans  &trans
   &trans  &rgb_ug RGB_TOG  &rgb_ug RGB_EFF  &rgb_ug RGB_EFR  &rgb_ug RGB_HUI  &rgb_ug RGB_HUD  &rgb_ug RGB_SAI  &rgb_ug RGB_SAD  &rgb_ug RGB_BRI  &rgb_ug RGB_BRD  &rgb_ug RGB_SPI  &rgb_ug RGB_SPD       &trans  &trans
   &trans       &bl BL_TOG     &bl BL_CYCLE           &trans           &trans           &trans           &trans           &trans           &trans           &trans           &trans           &trans  &bootloader
   &trans            &none           &trans           &trans           &trans           &trans           &trans           &trans           &trans           &trans           &trans           &trans  &kp PAGE_UP   &none  &trans
                &bt BT_CLR       &bt BT_PRV       &bt BT_NXT           &trans           &trans           &trans    &kp PAGE_DOWN           &trans            &none
            >;

            sensor-bindings = <&inc_dec_kp C_VOL_UP C_VOL_DN>;
        };
    };
};
